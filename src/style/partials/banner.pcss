.banner {
    color: white;
    overflow: hidden;
    background-image: url('../img/bed-zone.jpg');
    background-position: center;
    background-repeat: no-repeat;
    text-align: center;
    min-height: 400px;
    margin: 66px auto 0;
    max-width: 1600px;

    &__header {
        font-size: 86px;
        font-weight: 300;
        padding: 120px 0 0;
        margin-bottom: 20px;
    }

    &__description {
        font-size: 20px;
    }
}