.table {
    border: none;
    border-collapse: collapse;
    border-spacing: 0;
    margin: 0 0 calc($gutter / 2) 0;

    th,
    td {
        background: none;
        border: 1px solid $cl-grey;
        border-width: 0 0 1px 0;
        padding: 10px;
        text-align: left;
    }

    th {
        border-bottom-width: 2px;
    }
}