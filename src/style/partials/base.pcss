}


hr {
    background: none;
    border: none;
    border-bottom: 1px solid $cl-grey;
    display: block;
    position: relative;
    height: 1px;
    margin: calc($gutter / 2) 0;
    line-height: 0;
    font-size: 0;
}

ul, ol {
    li {
        list-style: none outside;
    }
}





q,
blockquote {
    margin-bottom: calc($gutter / 2);
    font-weight: bold;
}

fieldset {
    border: 1px solid $cl-grey;
    margin-bottom: calc($gutter / 2);
    padding: $gutter;

    legend {
        position: relative;
        margin-left: -10px;
        padding: 0 10px;
    }
}

.text-specify {
    color: $cl-dk-grey;
    font-size: 14px;
    line-height: 1.42;
}
