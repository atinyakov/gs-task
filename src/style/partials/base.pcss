/* Базовые стили */

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    outline: none;
}

html,
body {
    min-height: 100%;
}

body {
    background: $cl-global-invert;
    font-size: 16px;
    font-family: 'geometria_light', Arial, Helvetica, 'Helvetica CY', 'Nimbus Sans L', sans-serif;
    line-height: 1.5;
    color: $cl-global;
    vertical-align: top;
    backface-visibility: hidden;
}

img {
    max-width: 100%;
    height: auto;
}

a {
    color: $cl-global;
    fill: $cl-global;
    text-decoration: none;
    transition: all $time ease;

    &:hover {
        color: $cl-dk-blue;
        fill: $cl-dk-blue;
        text-decoration: none;
    }
}

strong,
b {
    font-weight: bold;

    i,
    em {
        font-weight: bold;
        font-style: italic;
    }
}

em,
i {
    font-style: italic;

    strong,
    b {
        font-weight: bold;
        font-style: italic;
    }
}

p {
    margin: 0 0 calc($gutter / 2);
}

h1,
h2,
h3,
h4,
h5,
h6 {
    margin: calc($gutter / 2) 0;

    &:first-child {
        margin-top: 0;
    }
}

